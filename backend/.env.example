# MongoDB Configuration
# Production MongoDB (Atlas or cloud) - ALL data goes here by default
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jobtracker?retryWrites=true&w=majority

# Optional: Separate MongoDB for groups/chat (only if you need database separation)
# If not set or same as MONGODB_URI, all data uses the production database
# MONGODB_CHAT_URI=mongodb://localhost:27017/jobtracker_groups

# Server Configuration
NODE_ENV=production
PORT=3000

# JWT Secret (Generate a random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# CORS Origins (comma-separated)
CORS_ORIGINS=chrome-extension://,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional - for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Frontend URL (for CORS)
FRONTEND_URL=chrome-extension://your-extension-id


# MongoDB Configuration
# Production MongoDB (Atlas or cloud) - ALL data goes here by default
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jobtracker?retryWrites=true&w=majority

# Optional: Separate MongoDB for groups/chat (only if you need database separation)
# If not set or same as MONGODB_URI, all data uses the production database
# MONGODB_CHAT_URI=mongodb://localhost:27017/jobtracker_groups

# Server Configuration
NODE_ENV=production
PORT=3000

# JWT Secret (Generate a random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# CORS Origins (comma-separated)
CORS_ORIGINS=chrome-extension://,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional - for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Frontend URL (for CORS)
FRONTEND_URL=chrome-extension://your-extension-id

# Sentry Configuration (Error Tracking & Performance Monitoring)
# Sign up at https://sentry.io (Free tier: 5,000 errors/month)
# Create a new Node.js project and copy the DSN here
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=job-tracker-api@1.0.0

# Redis Configuration (Caching)
# Upstash Redis (Free tier: 10,000 commands/day)
# Sign up at https://upstash.com
REDIS_URL=redis://default:your-password@your-redis-host:6379
REDIS_JOB_CACHE_TTL=300
REDIS_CHAT_CACHE_TTL=86400

# AWS S3 Configuration (Resume Storage)
# Create an S3 bucket and IAM user with S3 access
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=job-tracker-resumes
AWS_S3_SIGNED_URL_EXPIRY=3600


{
  "manifest_version": 3,
  "name": "Track376",
  "version": "3.0.0",
  "description": "Track Jobs with Friends - Share Opportunities, Chat & Succeed. Kanban boards, smart autofill, and real-time collaboration.",
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["job-filter/content.js"],
      "css": ["job-filter/floating-panel.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "shared/popup.html"
  },
  "background": {
    "service_worker": "shared/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "tracking-dashboard/dashboard.html",
        "tracking-dashboard/job-detail.html",
        "tracking-dashboard/dashboard.css",
        "tracking-dashboard/dashboard.js",
        "tracking-dashboard/job-detail.css",
        "tracking-dashboard/job-detail.js",
        "tracking-dashboard/job-tracker.js",
        "tracking-dashboard/auth-guard.js",
        "tracking-dashboard/group-detail.html",
        "tracking-dashboard/group-detail.css",
        "tracking-dashboard/group-detail.js",
        "autofill/semantic-matcher.js",
        "autofill/intelligent-value-mapper.js",
        "autofill/ats-platform-intelligence.js",
        "autofill/resume-manager.js",
        "autofill/autofill-engine.js",
        "autofill/autofill-content.js",
        "autofill/profile-setup.html",
        "autofill/profile-setup.css",
        "autofill/profile-setup.js",
        "autofill/profile.html",
        "autofill/profile.css",
        "autofill/profile.js",
        "auth/login.html",
        "auth/register.html",
        "auth/auth.css",
        "auth/auth.js",
        "shared/auth-manager.js",
        "shared/api-client.js",
        "shared/sync-manager.js",
        "shared/socket-client.js",
        "shared/socket.io.min.js",
        "shared/config.js",
        "shared/group-api.js",
        "shared/shared-jobs-api.js",
        "shared/notification-manager.js",
        "shared/smart-notifications.js"
      ],
      "matches": [
        "https://www.linkedin.com/*",
        "https://www.indeed.com/*",
        "https://*.myworkdayjobs.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.taleo.net/*",
        "https://*.icims.com/*",
        "https://*.smartrecruiters.com/*",
        "https://*.jobvite.com/*",
        "https://*.breezy.hr/*",
        "https://*.workable.com/*",
        "https://jobs.ashbyhq.com/*",
        "https://*.bamboohr.com/*",
        "https://recruiting.ultipro.com/*",
        "https://*.applytojob.com/*"
      ]
    }
  ]
}
